#post_content
  = link_to "Edit post", edit_post_path(@post), class: "button"
  = link_to "Delete post", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, class: "button"
  %h1= @post.title
  %hr/
  %p= @post.content
  %hr/

  #comments
    %h2
      =@post.comments.count
      Comments
    = render @post.comments

    %h3 Reply to thread
    = render 'comments/form'


